<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/header_units">

        <ListPreference
            app:key = "key_preference_temperature"
            app:defaultValue="C"
            app:entries="@array/temperature_unit_entries"
            app:entryValues="@array/temperature_unit_values"
            app:title="@string/title_temperature"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/header_todo">

        <SwitchPreferenceCompat
            app:key="key_todo"
            app:title="@string/title_todo" />

    </PreferenceCategory>

</PreferenceScreen>