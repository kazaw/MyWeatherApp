<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewCityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/text_city_name"
            android:autofillHints="city_name"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/editText_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_latitude"
            android:ems="10"
            android:autofillHints="latitude"
            android:inputType="numberSigned|numberDecimal" />

        <EditText
            android:id="@+id/editText_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_longitude"
            android:ems="10"
            android:autofillHints="longitude"
            android:inputType="numberSigned|numberDecimal" />

        <Button
            android:id="@+id/button_add_city_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_add_city" />
    </LinearLayout>
</FrameLayout>